{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "type": "node",
            "request": "launch",
            "program": "dist/src/index.js",
            "stopOnEntry": false,
            "args": [],
            "cwd": ".",
            "runtimeExecutable": null,
            "runtimeArgs": [
                "--nolazy"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "externalConsole": false,
            "sourceMaps": false,
            "outDir": null
        },
        {
            "name": "Attach",
            "type": "node",
            "request": "attach",
            "port": 5858
        },
        {
            "name": "mocha",
            "type": "node",
            "program": "node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "args": [
                "--no-exit",
                "./dist/test"
            ], //you can specify paths to specific tests here
            "cwd": ".",
            "runtimeExecutable": null,
            "env": {
                "NODE_ENV": "testing"
            },
            "sourceMaps": true,
            "outDir": "./dist/src"
        }
    ]
}