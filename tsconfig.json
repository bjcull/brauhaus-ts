{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "noEmitOnError": false,
    "rootDir": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "outDir": "./dist",
    "declaration": true    
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compileOnSave": false
}